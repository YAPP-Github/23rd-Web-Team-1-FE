{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./jest.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
